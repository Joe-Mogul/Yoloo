<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@color/primary_blue"
  android:orientation="vertical"
  android:padding="16dp"
  tools:parentTag="android.widget.LinearLayout">

  <com.yoloo.android.ui.widget.BaselineGridTextView
    android:id="@+id/tv_bounty_title"
    fontPath="fonts/OpenSans-Semibold.ttf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Richie"
    android:textColor="@android:color/white"
    android:textSize="16sp" />

  <com.yoloo.android.ui.widget.CompatTextView
    android:id="@+id/tv_bounty_content"
    fontPath="fonts/OpenSans-Bold.ttf"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:drawablePadding="12dp"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:textSize="22sp"
    app:drawableStart="@drawable/ic_bounty_1"
    tools:text="10" />

  <com.yoloo.android.ui.widget.BaselineGridTextView
    android:id="@+id/tv_bounty_price"
    fontPath="fonts/OpenSans-Semibold.ttf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="$10"
    android:textColor="@android:color/white" />

</merge>