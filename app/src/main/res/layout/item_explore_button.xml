<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="16dp"
  android:orientation="horizontal">

  <android.support.v7.widget.CardView
    android:id="@+id/card_explore_trending"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_weight="0.45"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="@+id/guideline">

    <com.yoloo.android.ui.widget.CompatTextView
      android:id="@+id/tv_explore_trending"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:drawablePadding="16dp"
      android:gravity="center"
      android:text="@string/explore_trending"
      android:textColor="@android:color/secondary_text_light"
      app:drawableStart="@drawable/ic_trending_up_black_24dp" />

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/card_explore_new"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_weight="0.45"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="@+id/guideline"
    app:layout_constraintRight_toRightOf="parent">

    <com.yoloo.android.ui.widget.CompatTextView
      android:id="@+id/tv_explore_new"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:drawablePadding="16dp"
      android:gravity="center"
      android:text="@string/explore_new"
      android:textColor="@android:color/secondary_text_light"
      app:drawableStart="@drawable/ic_flag_black_24dp" />

  </android.support.v7.widget.CardView>

</LinearLayout>